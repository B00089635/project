{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="example-wrapper">
    <h1>Home Page</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Details</th>
            <th>Support</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for proposed_referendum in proposed_referendums %}
            <tr>
                <td>{{ proposed_referendum.id }}</td>
                <td>{{ proposed_referendum.user }}</td>
                <td>{{ proposed_referendum.details }}</td>
                <td>{{ proposed_referendum.support }}</td>
                <td>

                    <a href = "{{ url('proposed_referendum_index') }}"><button type="button">Support</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




</div>
{% endblock %}
