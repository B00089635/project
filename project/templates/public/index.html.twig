{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<div class="example-wrapper">
    <h1>Home Page</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Details</th>
            <th>Support</th>
            <th>action</th>
            <th>action</th>
        </tr>
        </thead>
        <tbody>
        {% for proposed_referendum in proposed_referendums %}
            <tr>
                <td>{{ proposed_referendum.id }}</td>
                <td>{{ proposed_referendum.user }}</td>
                <td>{{ proposed_referendum.details }}</td>
                <td>{{ proposed_referendum.support }}</td>
                <td>
                    <a href = "{{ path('showTwo', {'id': proposed_referendum.id}) }}"><button type="button">show</button></a>
                </td>
                <td>
                    <a href = "{{ url('proposed_referendum_index') }}"><button type="button">Support</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br><br>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Details</th>
            <th>Date</th>
            <th>Votes for</th>
            <th>Votes Against</th>
            <th>action</th>
            <th>action</th>
        </tr>
        </thead>
        <tbody>
        {% for referendum in referendums %}
            <tr>
                <td>{{ referendum.id }}</td>
                <td>{{ referendum.title }}</td>
                <td>{{ referendum.details }}</td>
                <td>{{ referendum.date }}</td>
                <td>{{ referendum.votesFor }}</td>
                <td>{{ referendum.votesAgainst }}</td>
                <td>
                    <a href = "{{ path('show', {'id': referendum.id}) }}"><button type="button">show</button></a>
                </td>
                <td>
                    <a href = "{{ url('proposed_referendum_index') }}"><button type="button">Vote!</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
