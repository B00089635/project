{% extends 'student/base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div id="piechart"></div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
        // Load google charts
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        // Draw the chart and set the chart values
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['Task', 'Votes'],
                ['Yes', 1],
                ['No', 2],
            ]);

            // Optional; add a title and set the width and height of the chart
            var options = {'title':'Vote Distribution', 'width':550, 'height':400, 'colors':['#05b71d', '#e00b0b'], 'backgroundColor' :'#a7f1a7' };

            // Display the chart inside the <div> element with id="piechart"
            var chart = new google.visualization.PieChart(document.getElementById('piechart'));
            chart.draw(data, options);
        }
    </script>

    <div id = "container" style = "width: 550px; height: 400px; margin: 0 auto"></div>
    <script language = "JavaScript">
        function drawChart() {
            // Define the chart to be drawn.
            var data = google.visualization.arrayToDataTable([
                ['Title', 'Support Votes', 'Pending Votes'],
                ['--title--',  2,      48],
                ['--title--',  29,      21],
                ['--title--',  50,      0],
                ['--title--',  16,       34],
                ['--title--',  11,      39]
            ]);

            var options = {
                title: 'Votes In support (with amount remianing untill target)',
                isStacked:'percent'
            };

            // Instantiate and draw the chart.
            var chart = new google.visualization.BarChart(document.getElementById('container'));
            chart.draw(data, options);
        }
        google.charts.setOnLoadCallback(drawChart);
    </script>

<div class="example-wrapper">
    <h1>Student</h1>
</div>
{% endblock %}
